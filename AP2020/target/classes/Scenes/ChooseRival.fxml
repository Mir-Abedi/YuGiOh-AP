<AnchorPane prefHeight="400.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.graphics.duelgraphics.ChooseRival">
   <Pane layoutY="1.0" prefHeight="400.0" prefWidth="340.0" style="-fx-background-color: white;">
      <VBox fx:id="searchBox" layoutX="110.0" layoutY="13.0" prefHeight="28.0" prefWidth="118.0">
